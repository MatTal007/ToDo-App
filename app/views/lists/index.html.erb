<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Zadanie</th>
      <th>Wykonanie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.zadanie %></td>
        <td><%= list.wykonane %></td>
        <td><%= link_to 'Wyświetl', list %></td>
        <td><%= link_to 'Edytuj', edit_list_path(list) %></td>
        <td><%= link_to 'Usuń', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowe zadanie', new_list_path %>
